<div class="nested-fields pt-3 custom-table-new">
  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
        <div id="message" style="<%= f.object.errors[:name].present? ? '' : 'display:none;' %>">
          <%= f.object.errors[:name].first %>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-group">
        <%= f.text_field :description, class: 'form-control', placeholder: 'Description' %>
      </div>
    </div>

    <div class="col-md-2">
      <div class="dropdown">
        <%= f.select :stream_type, EventStream::FIELD_TYPES, {}, {class: 'form-select form-control'} %>
      </div>
    </div>

    <div class="col-md-2">
      <div class="dropdown">
        <%= f.select :data_type, EventStream::DATA_TYPES, {}, {class: 'form-select form-control'} %>
      </div>
    </div>

    <div class="col-md-1">
      <label class="check_box text-center d-inline">
        <%= f.check_box :required %>
        <span class="checkmark"></span>
      </label>
    </div>

    <div class="col-md-2">
      <%= link_to_remove_association(f, {class: 'remove_fields dynamic table_delete'}) do %>
        <%= image_tag('70.png') %>
        Delete
      <% end %>
    </div>
  </div>
</div>
